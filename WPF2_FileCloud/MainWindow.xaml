<Window x:Class="WPF2_FileCloud.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF2_FileCloud"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Login Page" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="26" Margin="0,68,0,0"></Label>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <TextBox x:Name="loginBox" Width="250" FontSize="26">a</TextBox>
            <TextBox x:Name="passwordBox" Width="250" FontSize="26">a</TextBox>
            <Button x:Name="authButton"  FontSize="26" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Click Me" Click="Button_Click"/>
            <Label x:Name="message" Content="server message here" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="26"/>
        </StackPanel>
    </Grid>
</Window>
